generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  outcome   String // Income / Expense
  type      String // Category (Salary, Food, etc)
  amount    Int // number
  date      DateTime // yyyy-mm-dd
  note      String?
  timestamp BigInt
  createdAt DateTime @default(now())
  category  String
}
